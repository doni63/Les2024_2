@model SwitchSelect.Models.Devolucao


<h1>Devolucao</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Devolucao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ClienteId" class="form-control" hidden></input>
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" readonly/>              
            </div>
            <div class="form-group">
                
                <input asp-for="PedidoId" class="form-control" hidden></input>
            </div>
            <div class="form-group">
                
                <input asp-for="Status" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="DataSolicitacao" class="control-label"></label>
                <input asp-for="DataSolicitacao" class="form-control" readonly/>
               
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Solicitar devolução" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Cancelar</a>
</div>

