@model IEnumerable<SwitchSelect.Models.PedidoDetalhe>


<h1>Detalhes do Pedido</h1>

@foreach (var item in Model)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Pedido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.PedidoId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Quantidade)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.JogoId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.JogoId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.NomeJogo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.NomeJogo)
            </dd>
            <dt class="col-sm-2">
                <label>Status</label>
            </dt>
            <dd class="col-sm-10">
                <input value="@ViewBag.PedidoStatus" readonly style="border:none" />
            </dd>
            <dd>
               <a class="btn btn-primary">Atualizar Status</a>
            </dd>
        </dl>
    </div>
}

<button type="button" onclick="history.back();" class="btn btn-primary">Voltar</button>

