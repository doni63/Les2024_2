<!DOCTYPE html>
<html lang="pt-br">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwitchSelect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SwitchSelect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <style>
        .nav-input {
            width: 500px; /* Ajuste este valor conforme necessário */
        }
    </style>
</head>
<body>
    <header class="bg-red">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 py-5 ">
            <div class="container-fluid">
                <a class="navbar-brand header-class-font text-white" asp-area="" asp-controller="Home" asp-action="Index">SwitchSelect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <button id="menu" class="btn text-white" onclick="exibirModalMenu()">
                                <i class="bi bi-list fs-3"></i>
                            </button>
                        </li>

                        <li class="nav-item" style="margin-right: 2.5%">
                            <a class="nav-link header-class-font text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house fs-3"></i>
                            </a>
                        </li>


                        <li class="nav-item" style="margin-right: 5%">
                            @await Component.InvokeAsync("CategoriaMenu")
                        </li>

                        <li class="nav-item" style="margin-right:5%">
                            <form class="input-group nav-input" asp-controller="Jogo" asp-action="Pesquisa" method="get">
                                <input type="text" class="form-control " placeholder="O que você quer Jogar?"
                                       name="stringPesquisa" value="@ViewData["stringPesquisa"]" />
                                <span class="input-group-text">
                                    <img src="~/icones/search.png" />
                                </span>
                            </form>
                        </li>

                        <li class="nav-item" style="margin-right: 5%">
                            <a class="nav-link header-class-font text-white" asp-area="" asp-controller="Login" asp-action="TelaLogin">
                                <i class="bi bi-person fs-3"></i>
                            </a>
                        </li>

                        <li class="nav-item" style="margin-right: 5%">
                            <a asp-controller="Jogo" asp-action="JogosPreferidos" class="nav-link header-class-font text-white ">
                                <i class="bi bi-heart fs-3"></i>
                            </a>
                        </li>
                        <!--Icone carrinho de compra-->
                        <li class="nav-item">
                            <a class="nav-link header-class-font text-white" asp-controller="" asp-action="">
                                <!--<i class="bi bi-cart fs-3"></i>-->
                                <span id="cart-count">@await Component.InvokeAsync("CarrinhoCompraResumo")</span>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SwitchSelect -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" style="margin-right:2.5%">Privacy</a>
            <a asp-controller="Contato" asp-action="Index"> Contato </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!--Modal Menu-->
    <div class="modal" tabindex="-1" role="dialog" id="modalMenu">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Menu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                </div>
                <div class="modal-body">
                    <a asp-controller="Admin" asp-action="TelaAdmin">Área do administrador</a>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>



    <!--Contador de produtos-->
    <script>

        function exibirModalMenu() {
            $('#modalMenu').modal('show');
        }

    </script>

</body>
</html>
