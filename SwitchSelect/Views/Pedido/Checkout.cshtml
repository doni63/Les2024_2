@model SwitchSelect.Models.ViewModels.ClientePedidoViewModel

<h3>Você está a um passo de adquirir seu produto</h3>
<hr />
<form asp-action="Checkout" method="post" class="" role="form">

    <!--Nome,genero e data nascimento-->
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Cliente.Nome" class="form-label"></label>
            <input asp-for="@Model.Cliente.Nome" class="form-control" />
            <span asp-validation-for="@Model.Cliente.Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="control-label">Gênero</label>
            <select class="form-control" asp-for="@Model.Cliente.Genero">
                <option value="">Selecione o gênero</option>
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select>
            <span asp-validation-for="@Model.Cliente.Genero" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="@Model.Cliente.DataDeNascimento" class="form-label"></label>
            <input asp-for="@Model.Cliente.DataDeNascimento" class="form-control" type="date" />
            <span asp-validation-for="@Model.Cliente.DataDeNascimento" class="text-danger"></span>
        </div>
    </div>
    <!--Rg, Cpf-->
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Cliente.RG" class="form-label"></label>
            <input asp-for="@Model.Cliente.RG" class="form-control" />
            <span asp-validation-for="@Model.Cliente.RG" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Cliente.Cpf" class="form-label"></label>
            <input asp-for="@Model.Cliente.Cpf" class="form-control" />
            <span asp-validation-for="@Model.Cliente.Cpf" class="text-danger"></span>
        </div>

    </div>
    <!--DDD,tipoTelefone, Telefone e email-->
    <div class="row">
        <div class="form-group col-md-2">
            <label asp-for="@Model.Telefone.DDD" class="form-label"></label>
            <input asp-for="@Model.Telefone.DDD" class="form-control" />
            <span asp-validation-for="@Model.Telefone.DDD" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="@Model.Telefone.TipoTelefone" class="form-label"></label>
            <input asp-for="@Model.Telefone.TipoTelefone" class="form-control" />
            <span asp-validation-for="@Model.Telefone.TipoTelefone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Telefone.NumeroTelefone" class="form-label"></label>
            <input asp-for="@Model.Telefone.NumeroTelefone" class="form-control" />
            <span asp-validation-for="@Model.Telefone.NumeroTelefone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Cliente.Email" class="form-label"></label>
            <input asp-for="@Model.Cliente.Email" class="form-control" />
            <span asp-validation-for="@Model.Cliente.Email" class="text-danger"></span>
        </div>
    </div>
    <!--TipoLogradouro, Logradouro, numero-->
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Endereco.TipoLogradouro" class="control-label"></label>
            @Html.DropDownListFor(model => model.Endereco.TipoLogradouro,
                     new SelectList(Enum.GetValues(typeof(SwitchSelect.Models.TipoLogradouro))),
                     "Selecione o Tipo de logradouro",
                     new { @class = "form-control" })
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Endereco.Logradouro" class="control-label"></label>
            <input asp-for="@Model.Endereco.Logradouro" class="form-control" />
            <span asp-validation-for="@Model.Endereco.Logradouro" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Endereco.Numero" class="control-label"></label>
            <input asp-for="@Model.Endereco.Numero" class="form-control" />
            <span asp-validation-for="@Model.Endereco.Numero" class="text-danger"></span>
        </div>
    </div>
    <!--cep, bairro, cidade, estado-->
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Endereco.CEP" class="control-label"></label>
            <input asp-for="@Model.Endereco.CEP" class="form-control" />
            <span asp-validation-for="@Model.Endereco.CEP" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Endereco.Bairro.Descricao" class="control-label"></label>
            <input asp-for="@Model.Endereco.Bairro.Descricao" class="form-control" />
            <span asp-validation-for="@Model.Endereco.Bairro.Descricao" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Endereco.Bairro.Cidade.Descricao" class="control-label"></label>
            <input asp-for="@Model.Endereco.Bairro.Cidade.Descricao" class="form-control" />
            <span asp-validation-for="@Model.Endereco.Bairro.Cidade.Descricao" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Endereco.Bairro.Cidade.Estado.Descricao" class="control-label"></label>
            <input asp-for="@Model.Endereco.Bairro.Cidade.Estado.Descricao" class="form-control" />
            <span asp-validation-for="@Model.Endereco.Bairro.Cidade.Estado.Descricao" class="text-danger"></span>
        </div>
    </div>
    <!--Tipo de residencia e complemento-->
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Endereco.TipoResidencia" class="control-label"></label>
            @Html.DropDownListFor(model => model.Endereco.TipoResidencia,
                     new SelectList(Enum.GetValues(typeof(SwitchSelect.Models.TipoResidencia))),
                     "Selecione o Tipo de Residência",
                     new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Endereco.Complemento" class="control-label"></label>
            <input asp-for="@Model.Endereco.Complemento" class="form-control" />

        </div>
    </div>
    <hr />
    <!--Botoes-->
    <div class="row">
        <div class="form-group col-md-2">
            <input class="btn btn-primary" type="submit" value="Concluir pedido" />
        </div>
        <div class="form-group col-md-3">
            <a class="btn btn-outline-info" asp-controller="CarrinhoCompra" asp-action="Index">Retornar ao carrinho</a>
        </div>
        
    </div>

</form>