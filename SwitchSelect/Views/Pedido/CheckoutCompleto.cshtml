@model SwitchSelect.Models.Pedido

<div class="container">
    <div class="bg-black text-white py-5">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Data do pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do pedido: <strong>@Model.Id <strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Jogo</th>
                    <th>Preço</th>
                    <th>Desconto</th>
                </tr>
                @foreach (var item in Model.PedidoItens)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content(item.Jogo.ImagemUrl)" 
                            class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                        </td>
                        <td>@item.Quantidade</td>
                        <td>@item.Jogo.Nome</td>
                        <td>@item.Jogo.Preco</td>
                        <td>
                            @if (item.Pedido.Desconto.HasValue)
                            {
                                <text>@item.Pedido.Desconto.Value.ToString("c2")</text>
                            }
                            else
                            {
                                <p>R$0,00</p>
                            }
                        </td>


                    </tr>
                }
            </table>
            <h4>Valor total do pedido: <strong>@(((decimal)ViewBag.PedidoTotal).ToString("C2"))</strong></h4>
            <h4>Status do pedido: <strong>@Model.Status</strong></h4>
            <h4>Cartão: <strong>@Model.Bandeira</strong></h4>
            <h4>Final: <strong>@Model.CartaoQuatroDigito</strong></h4>
        </div>
    </div>
</div>
<div class="form-group">  
    <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
</div>
