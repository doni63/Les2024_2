@model IEnumerable<SwitchSelect.Models.PedidoDetalhe>


@{
    ViewData["Title"] = "PedidoDetalhe";
}

<h1>Pedidos</h1>
<h3>@ViewBag.PedidoTotal</h3>
@foreach (var item in Model)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Pedido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.PedidoId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Quantidade)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.JogoId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.JogoId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.NomeJogo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.NomeJogo)
            </dd>
            <dt class="col-sm-2">
                <label>Status</label>
            </dt>
            <dd class="col-sm-10">
                <input value="@ViewBag.StatusPedido" readonly style="border:none"/>
            </dd>
            <dd>
                <a class="btn btn-primary" asp-controller="Troca" asp-action="SolicitarTroca"
                   asp-route-jogoId="@item.JogoId" asp-route-nomeJogo="@item.NomeJogo"
                   asp-route-pedidoId="@item.PedidoId">Trocar Produto</a>
            </dd>
        </dl>
    </div>
}
<button type="button" onclick="history.back();" class="btn btn-primary">Voltar</button>

